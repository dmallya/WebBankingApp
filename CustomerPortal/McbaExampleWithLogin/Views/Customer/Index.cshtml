@model Customer
@{
    ViewData["Title"] = "Accounts";
}

<div>
    <h6 class="display-4">Welcome, @Model.Name</h6>
    
    <h6>Your Accounts</h6>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(x => x.Accounts[0].AccountNumber)</th>
            <th>@Html.DisplayNameFor(x => x.Accounts[0].AccountType)</th>
            <th>@Html.DisplayNameFor(x => x.Accounts[0].Balance)</th>
            <th></th>
        </tr>
        @foreach(var account in Model.Accounts) {
            <tr>
                <td>@Html.DisplayFor(x => account.AccountNumber)</td>
                <td>@Html.DisplayFor(x => account.AccountType)</td>
                <td>@Html.DisplayFor(x => account.Balance)</td>
                @*<td>
                    <a class="btn btn-primary" asp-action="Deposit" asp-route-id="@account.AccountNumber">Deposit</a>
                    <a class="btn btn-primary" asp-action="Withdraw" asp-route-id="@account.AccountNumber">Withdraw</a>
                    <a class="btn btn-primary" asp-action="MyStatement" asp-route-id="@account.AccountNumber">MyStatement</a>
                    <a class="btn btn-primary" asp-action="Transfer" asp-route-id="@account.AccountNumber">Transfer</a>
                </td>*@
            </tr>
        }
    </table>
</div>
